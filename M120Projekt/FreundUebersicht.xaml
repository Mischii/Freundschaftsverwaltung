<Window x:Class="M120Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M120Projekt"
        mc:Ignorable="d"
        MinWidth="350"
        MinHeight="250"
        Title="Freunde Übersicht" Height="450" Width="800">

    <Grid>
        <Grid.Resources>
            <Image x:Key="searchIcon" Source="../images/search-icon.png"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Erste Reihe besteht aus der Suchbar -->
        <TextBox Name="sucheTextBox" Grid.Column="1" Grid.Row="0" Margin="10">Hier ihre suche eingeben</TextBox>
        <Label Name="sucheLable" Grid.Column="2" Grid.Row="0" Margin="20.5,20,207.5,20.5">Suche</Label>
        <Button Content="{StaticResource searchIcon}" Name="suchIcon" Grid.Column="2" Grid.Row="0" Margin="10" Width="50" Height="50" BorderBrush="White" Background="White"/>

        <StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Margin="5" FontSize="16" Content="Nachname" />
                <Label Grid.Column="1" Margin="5" FontSize="16" Content="Vorname"/>
                <Label Grid.Column="2" Margin="5" FontSize="16" Content="Geburtsdatum"/>
                <Label Grid.Column="3" Margin="5" FontSize="16" Content="Adresse"/>
                <Label Grid.Column="2" Margin="5" FontSize="16" Content=""/>
                <Label Grid.Column="3" Margin="5" FontSize="16" Content=""/>
            </Grid>
        </StackPanel>

        <ListBox Name="alleFreunde" Grid.Column="1" Grid.Row="2" SelectionChanged="ListBox_SelectionChanged" AllowDrop="True" Grid.ColumnSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Margin="5" FontSize="10" Text="{Binding Path=Nachname}"/>
                            <TextBlock Grid.Column="1" Margin="5" FontSize="10" Text="{Binding Path=Vorname}"/>
                            <TextBlock Grid.Column="2" Margin="5" FontSize="10" Text="{Binding Path=Geburtsdatum}"/>
                            <TextBlock Grid.Column="3" Margin="5" FontSize="10" Text="{Binding Path=Adresse}"/>
                            <Button Name="detail" Grid.Column="4" Margin="5" FontSize="10" Content="Detail" Click="DetailsAnzeigen"/>
                            <Button Name="edit" Grid.Column="5" Margin="5" FontSize="10" Content="Edit" Click="FreundEditieren"/>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Dritte Reihe besteht aus den Buttons zum erstellen eines Freundes und dem schliessen der Applikation -->
        <Button Name="freundErfassen" Grid.Column="1" Grid.Row="3" Width="100" Height="20" Click="FreundErfassen_Click" >Freund erfassen</Button>
        <Button Name="programmSchliesen" Grid.Column="2" Grid.Row="3" Width="120" Height="20" Click="ProgrammSchliesen_Click" >Programm schliessen</Button>

    </Grid>
</Window>
