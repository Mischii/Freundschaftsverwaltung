<UserControl x:Class="M120Projekt.UserControls.TextBoxMitValidierung"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M120Projekt.UserControls"
             mc:Ignorable="d" 
             d:DesignWidth="490" d:DesignHeight="24">
    <Grid VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="validierteTextBox" Grid.Column="0" Height="24" Width="200" Margin="0" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" TextChanged="Eingabe_TextChanged"/>
        <Label Name="kommentarLabel" Grid.Column="1" Content="" Width="290" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="12" Height="30" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
