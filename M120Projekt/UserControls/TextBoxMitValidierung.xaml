<UserControl x:Class="M120Projekt.UserControls.TextBoxMitValidierung"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M120Projekt.UserControls"
             mc:Ignorable="d" 
             d:DesignWidth="380" d:DesignHeight="22.5">
    <Grid VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="validierteTextBox" Grid.Column="0" Height="22.5" Width="250"  TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" TextChanged="Eingabe_TextChanged"/>
        <Label Name="kommentarLabel" Grid.Column="1" Content="" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="90" FontSize="7" Height="22.5"/>
    </Grid>
</UserControl>
